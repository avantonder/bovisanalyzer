/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run avantonder/bovisanalyzer -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    input           = 'https://raw.githubusercontent.com/avantonder/bovisanalyzer/main/test-datasets/samplesheet.csv'

    // Reference
    reference       =  'https://raw.githubusercontent.com/avantonder/bovisanalyzer/main/test-datasets/reference/Mycobacterium_bovis_AF2122_97_GCF_000195835_4.fa'

    // Databases

    kraken2db       = null
    brackendb       = null
    
    // Options to speed up test
    skip_kraken2    = true
    subsampling_off = true
    skip_clusters   = true
    skip_alignment  = true
}
